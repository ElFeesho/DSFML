{
        "name": "dsfml",
        "description": "This is a temporary json file for DUB. It is ready for testing, but no promises!",
        "authors": ["Jeremy DeHaan"],
        "homepage": "https://github.com/Jebbs/DSFML",
        "license": "Zlib",
        "targetType": "none",
        "importPaths": ["src/"],
        
        "subPackages":
        [
                {
                        "name": "audio",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/audio"],
                        "libs": [ "dsfml-audio" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~master" 
                        }
                },
                {
                        "name": "graphics",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/graphics"],
                        "libs": [ "dsfml-graphics" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~master",
                                "dsfml:window": "~master"
                        }
                },
                {
                        "name": "window",
                        "sourcePaths": ["src/dsfml/window"],
                        "libs": [ "dsfml-window" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~master" 
                        }
                },
                {
                        "name": "network",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/network"],
                        "libs": [ "dsfml-network" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~master" 
                        }
                },
                {
                        "name": "system",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/system"],
                        "libs": [ "dsfml-system" ]
                }
        ]
}
