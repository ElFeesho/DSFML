{
        "name": "dsfml",
        "description": "DSFML binding for SFML-The Simple and Fast Multimedia Library",
        "authors": ["Jeremy DeHaan"],
        "homepage": "https://github.com/Jebbs/DSFML",
        "license": "Zlib",
        "dependencies": {
            "dsfml:audio": "~2.1-rc",
            "dsfml:graphics": "~2.1-rc",
            "dsfml:window": "~2.1-rc",
            "dsfml:network": "~2.1-rc",
            "dsfml:system": "~2.1-rc"
        },
        "subPackages":
        [
                {
                        "name": "audio",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/audio"],
                        "libs": [ "dsfmlc-audio" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~2.1-rc" 
                        }
                },
                {
                        "name": "graphics",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/graphics"],
                        "libs": [ "dsfmlc-graphics" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~2.1-rc",
                                "dsfml:window": "~2.1-rc"
                        }
                },
                {
                        "name": "window",
                        "sourcePaths": ["src/dsfml/window"],
                        "libs": [ "dsfmlc-window" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~2.1-rc" 
                        }
                },
                {
                        "name": "network",
                        "targetType": "library",
                        "sourcePaths": ["src/dsfml/network"],
                        "libs": [ "dsfmlc-network" ],
                        "dependencies": 
                        { 
                                "dsfml:system": "~2.1-rc" 
                        }
                },
                {
                        "name": "system",
                        "targetType": "library",
                        "importPaths": ["src/"],
                        "sourcePaths": ["src/dsfml/system"],
                        "libs": [ "dsfmlc-system" ]
                }
        ]
}
